<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MayListServlet</servlet-name>
        <servlet-class>controller.MayListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MayListServlet</servlet-name>
        <url-pattern>/may-list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MayAddServlet</servlet-name>
        <servlet-class>controller.MayAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MayAddServlet</servlet-name>
        <url-pattern>/may-add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MayDetailServlet</servlet-name>
        <servlet-class>controller.MayDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MayDetailServlet</servlet-name>
        <url-pattern>/may-detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MayEditServlet</servlet-name>
        <servlet-class>controller.MayEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MayEditServlet</servlet-name>
        <url-pattern>/may-edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MayDeleteServlet</servlet-name>
        <servlet-class>controller.MayDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MayDeleteServlet</servlet-name>
        <url-pattern>/may-delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LichSuPhienServlet</servlet-name>
        <servlet-class>controller.LichSuPhienServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LichSuPhienServlet</servlet-name>
        <url-pattern>/lich-su-phien</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>TestApiServlet</servlet-name>
        <servlet-class>controller.TestApiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestApiServlet</servlet-name>
        <url-pattern>/api/test</url-pattern>
    </servlet-mapping>

</web-app>